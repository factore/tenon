Tenon.features.compact_form = {
  // show the loading img in the specified div
  init: function (div) {
    var $form = $('#form'),
         that;
    $('.item-list-compact').on('click', '.edit', function(e) {
      that = this;
      Tenon.features.loading.show("#form");
      $.get(that.href, function(data) {
        $form.fadeOut(400, function () {
          $form.html(data);
          $form.fadeIn(400);
        });
      }, 'html');
      e.preventDefault();
    });
  }
}

